{
  "name": "sanity-integration",
  "vendor": "ronadev",
  "version": "0.0.0-beta",
  "title": "Sanity Graphql integration",
  "description": "Sanity app for VTEX IO GraphQL Service",
  "mustUpdateAt": "2022-01-04",
  "categories": [],
  "dependencies": {
    "vtex.native-types": "0.x",
    "vtex.device-detector": "0.x",
    "vtex.css-handles": "1.x",
    "vtex.rich-text": "0.x",
    "vtex.render-runtime": "8.x"
  },
  "builders": {
    "node": "6.x",
    "docs": "0.x",
    "react": "3.x",
    "graphql": "1.x",
    "store": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "graphql-query"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "o2jl7jfz.api.sanity.io",
        "path": "/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "Sanity Integration",
    "type": "object",
    "properties": {
      "projectId": {
        "title": "Sanity Project ID",
        "description": "Enter Sanity Project ID",
        "type": "string"
      },
      "dataset": {
        "title": "Sanity Dataset",
        "description": "Enter Sanity Dataset",
        "type": "string"
      },
      "apiVersion": {
        "title": "Sanity API Version",
        "description": "Enter Sanity API Version (eg: 2024-09-10)",
        "type": "string"
      },
      "authToken": {
        "title": "Sanity Authorization Token",
        "description": "Enter Authorization Token",
        "type": "string"
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
